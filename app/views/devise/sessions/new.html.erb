<div class="border rounded-5 shadow p-5 mt-5">
<h2 class="text-center">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-control") do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class:"form-control" %>
  </div>
  </br>
  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password",class:"form-control" %>
  </div>
  <p>Don't Have Account <%= link_to "Sign up Here", new_registration_path(resource_name) %> </p>

<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% if devise_mapping.rememberable? %>
    <div class="field form-group my-3">
      <%= f.check_box :remember_me ,class:"form-check-input"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"btn btn-primary" %>
  </div>
<% end %>
